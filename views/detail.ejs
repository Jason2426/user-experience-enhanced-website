<%- include('./partials/head') %>

    <link rel="stylesheet" href="/styles/detail.css">

    </head>

    <body>

        <%- include('./partials/navbar') %>


            <!-- One post to read -->
            <main>
                <section class="post">

                    <h2 tabindex="0"> <%- post[0].title.rendered %> </h2>

                    <section class="metadata">
                        <img src="<% if (post[0].avatar /* auteurs hebben nog geen foto maar misschien voor later */) { %>
                            <%= post[0].avatar  %>
                          <% } else { %>
                            /images/profile-placeholder.png
                      <% } %>" alt="Foto van auteur" class="author-img" loading="lazy">
                        <div class="metatext">
                            <p class="author">
                                <%= post[0].yoast_head_json.author %>
                            </p>
                            <p>
                                /
                            </p>
                            <p class="category">
                                categorie
                            </p>
                        </div>
                    </section>

                    <section class="main-img">
                        <img src="<%= post[0].jetpack_featured_media_url %>" class="main-article-img" alt="">
                    </section>

                    <section class="action-bar">
                        <button class="share-btn">
                            <svg width="25" height="25" viewBox="0 0 24 24" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <g id="SVGRepo_bgCarrier" stroke-width="0" />
                                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" />
                                <g id="SVGRepo_iconCarrier">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M16.5 2.25C14.7051 2.25 13.25 3.70507 13.25 5.5C13.25 5.69591 13.2673 5.88776 13.3006 6.07412L8.56991 9.38558C8.54587 9.4024 8.52312 9.42038 8.50168 9.43939C7.94993 9.00747 7.25503 8.75 6.5 8.75C4.70507 8.75 3.25 10.2051 3.25 12C3.25 13.7949 4.70507 15.25 6.5 15.25C7.25503 15.25 7.94993 14.9925 8.50168 14.5606C8.52312 14.5796 8.54587 14.5976 8.56991 14.6144L13.3006 17.9259C13.2673 18.1122 13.25 18.3041 13.25 18.5C13.25 20.2949 14.7051 21.75 16.5 21.75C18.2949 21.75 19.75 20.2949 19.75 18.5C19.75 16.7051 18.2949 15.25 16.5 15.25C15.4472 15.25 14.5113 15.7506 13.9174 16.5267L9.43806 13.3911C9.63809 12.9694 9.75 12.4978 9.75 12C9.75 11.5022 9.63809 11.0306 9.43806 10.6089L13.9174 7.4733C14.5113 8.24942 15.4472 8.75 16.5 8.75C18.2949 8.75 19.75 7.29493 19.75 5.5C19.75 3.70507 18.2949 2.25 16.5 2.25ZM14.75 5.5C14.75 4.5335 15.5335 3.75 16.5 3.75C17.4665 3.75 18.25 4.5335 18.25 5.5C18.25 6.4665 17.4665 7.25 16.5 7.25C15.5335 7.25 14.75 6.4665 14.75 5.5ZM6.5 10.25C5.5335 10.25 4.75 11.0335 4.75 12C4.75 12.9665 5.5335 13.75 6.5 13.75C7.4665 13.75 8.25 12.9665 8.25 12C8.25 11.0335 7.4665 10.25 6.5 10.25ZM16.5 16.75C15.5335 16.75 14.75 17.5335 14.75 18.5C14.75 19.4665 15.5335 20.25 16.5 20.25C17.4665 20.25 18.25 19.4665 18.25 18.5C18.25 17.5335 17.4665 16.75 16.5 16.75Z"
                                        fill="#AAAAAA" />
                                </g>
                            </svg>
                            <span>Deel</span>
                        </button>

                        <button class="listen-btn">
                            <svg width="25" height="25" viewBox="0 0 24 24" fill="" xmlns="http://www.w3.org/2000/svg">
                                <g id="SVGRepo_bgCarrier" stroke-width="0" />
                                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" />
                                <g id="SVGRepo_iconCarrier">
                                    <path d="M3 11V13M6 8V16M9 10V14M12 7V17M15 4V20M18 9V15M21 11V13" stroke="#AAAAAA"
                                        stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </g>
                            </svg>
                            <span>Luister</span>
                        </button>

                        <form action="/detail/<%= post[0].slug %>" method="post">
                            <input type="hidden" name="slug" value="<%= post[0].slug %>">
                            <button class="like-btn" id="likeBtn">
                                <svg id="likeIcon" width="20px" height="25px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M2 9.1371C2 14 6.01943 16.5914 8.96173 18.9109C10 19.7294 11 20.5 12 20.5C13 20.5 14 19.7294 15.0383 18.9109C17.9806 16.5914 22 14 22 9.1371C22 4.27416 16.4998 0.825464 12 5.50063C7.50016 0.825464 2 4.27416 2 9.1371Z" fill="#AAAAAA"/>
                                </svg>
                                <span id="shareCount"><%= shares %></span>
                            </button>
                        </form>

                    </section>

                    <section class="est-read-time">
                        <p class="read-time">Geschatte leestijd : <%= post[0].yoast_head_json.twitter_misc["Geschatte leestijd"] %>
                    </section>

                    <section class="article-content">
                        <strong class="content-excerpt">
                            <!--Voor Screenreader om de luisteraar te laten weten dat dit het voorstuk is-->
                            <span hidden>Voorstuk.</span>
                            <%- post[0].excerpt.rendered %>
                        </strong>
                        <p class="actual-content">
                            <!--Voor Screenreader om de luisteraar te laten weten dat dit de hoofdtekst is-->
                            <span hidden>Nu de hoofdtekst :</span>
                            <%- post[0].content.rendered %>
                        </p>
                    </section>

                </section>
            </main>

            <%- include('./partials/foot') %>